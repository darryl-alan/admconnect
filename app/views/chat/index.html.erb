<h2 class="ui center aligned medium icon header">
  <i class="circular comments icon red"></i>
  Chat
</h2>
<div class='ui grid'>
  <div class='four wide column'>
    <div class="ui inverted vertical pointing menu">
      <a class="active item">
        Home
      </a>
      <a class="item">
        Messages
      </a>
      <a class="item">
        Friends
      </a>
    </div>
  </div>
  <div class='twelve wide column'>
    <div class='ui fluid raised card chatbox'>
      <div class='content'>
        <div class="ui feed">
          <% @messages.each do |message| %>
            <div class="event">
              <div class="content">
                <div class="summary">
                  <em><%= message.user.username %></em>: <%= message.body %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="extra content">
        <form class="ui reply form">
          <div class="field">
            <div class="ui fluid icon input">
              <input type="text" placeholder="Enter a message...">
              <i class="red arrow alternate bordered inverted right large icon"></i>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
